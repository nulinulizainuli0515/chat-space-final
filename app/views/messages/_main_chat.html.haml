-# <チャット画面>
.main
  .main-header
    .main-header__message
      .main-header__message-group
        =@group.name
      .main-header__message-name
        Member：
        .main-header__message-name__list
          -@group.group_users.each do |u| 
            = u.user.name
    .main-header__edit
      .main-header__edit__btn
        = link_to edit_group_path(@group), class:"edit__btn" do
          edit
  .main-text
    = render @messages

  .main-form
    = form_for [@group, @message] do |f|
      .comment-box
        = f.text_field :content, class: 'comment-box__text', placeholder: 'type a message' 
        = f.label :image,class: 'comment-box__image' do
          = icon('fas', 'image', class: 'icon')
          =f.file_field :image, class: 'hidden'
      = f.submit 'send', class: "main-btn"  
    

  